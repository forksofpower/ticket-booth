{
  "extends": "@ticketbooth/configs/tsconfig/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./build",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__mocks__",
    "jest.config.ts",
  ]
}
